<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for Buttons -->
    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/min_width_buttons</item>
        <item name="android:layout_height">@dimen/height_buttons</item>
        <item name="android:textSize">@dimen/text_size_buttons</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_top_bottom</item>
    </style>

    <!-- style for TextViews -->
    <style name="text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_bottom</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/margin_left_right</item>
    </style>

</resources>
