<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.georgekaraolanis.project4_musicalstructureapp.CreatePlaylistActivity">

    <TextView
        style="@style/text_view_style"
        android:text="@string/label_create_playlist"
        android:textSize="@dimen/text_size_label"
        android:gravity="center"/>

    <TextView
        style="@style/text_view_style"
        android:text="@string/info_create_playlist"
        android:textSize="@dimen/text_size_info" />

    <Button
        android:id="@+id/song_list_button"
        style="@style/button_style"
        android:text="@string/button_text_song_list"/>

    <Button
        android:id="@+id/search_song_button"
        style="@style/button_style"
        android:text="@string/button_text_search_song"/>

    <Button
        android:id="@+id/play_song_button"
        style="@style/button_style"
        android:text="@string/button_text_now_playing"/>

</LinearLayout>
