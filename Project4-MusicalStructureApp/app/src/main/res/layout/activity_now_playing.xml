<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.georgekaraolanis.project4_musicalstructureapp.NowPlayingActivity">

    <TextView
        style="@style/text_view_style"
        android:text="@string/label_now_playing"
        android:textSize="@dimen/text_size_label"
        android:gravity="center"/>

    <TextView
        style="@style/text_view_style"
        android:text="@string/info_now_playing"
        android:textSize="@dimen/text_size_info" />

    <Button
        android:id="@+id/show_details_button"
        style="@style/button_style"
        android:text="@string/button_text_show_details"/>

    <Button
        android:id="@+id/song_list_button"
        style="@style/button_style"
        android:text="@string/button_text_song_list"/>

</LinearLayout>
